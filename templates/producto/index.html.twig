{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}
{% block javascripts %}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".delete-product-btn").forEach(button => {
            button.addEventListener("click", function () {
                let productId = this.getAttribute("data-id");
                let form = this.closest(".delete-product-form"); // Obtener el formulario más cercano
                
                // Mostrar confirmación solo una vez
                if (!confirm("¿Estás seguro de que deseas eliminar este producto?")) {
                    return;
                }

                fetch(form.action, {
                    method: "POST",
                    body: new FormData(form) // Enviar los datos del formulario incluyendo el token CSRF
                })
                .then(response => {
                    if (response.ok) {
                        document.getElementById(`producto-${productId}`).remove(); // Eliminar fila sin recargar
                    } else {
                        alert("Error al eliminar el producto");
                    }
                })
                .catch(error => console.error("Error:", error));
            });
        });
    });
</script>
{% endblock %}
{% block body %}
    <h1>Productos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr id="producto-{{ producto.id }}">
                <td>{{ producto.id }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.precio }}</td>
                <td>{{ producto.stock }}</td>
                <td>
                    <a href="{{ path('app_producto_show', {'id': producto.id}) }}">Mostrar</a>
                    <a href="{{ path('app_producto_edit', {'id': producto.id}) }}">Editar</a>
                     {% include 'producto/_delete_form.html.twig' with {'producto': producto} %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No se encuentran Productos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_producto_new') }}">Crear nuevo producto</a>
{% endblock %}
